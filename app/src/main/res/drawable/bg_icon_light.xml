<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- لون الخلفية الفاتح -->
    <solid android:color="#F0F0F0" />

    <!-- الحواف الدائرية (نصف القطر = 50% لجعلها دائرية) -->
    <corners android:radius="20dp" />

    <!-- حجم الخلفية -->
    <size
        android:width="40dp"
        android:height="40dp" />

    <!-- حدود اختيارية (يمكن إزالتها إذا لم تكن مطلوبة) -->
    <stroke
        android:width="0.5dp"
        android:color="#E0E0E0" />

</shape>