<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CarApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200_dark</item>
        <item name="colorSecondaryVariant">@color/teal_700_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>

        <item name="colorError">@color/red_dark</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorTertiary">@color/text_tertiary_dark</item>

        <item name="android:windowBackground">@color/window_background_dark</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

</resources>